<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

       <context id="mysqlTables" targetRuntime="MyBatis3">

              <commentGenerator>
                     <!--设置为true，则默认不添加注释，否则添加注释-->
                     <property name="suppressAllComments" value="true"/>
              </commentGenerator>

              <!--数据库连接字符串，需要生成的数据库的连接信息-->
              <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://10.8.8.201:3306/webchart_crm"
                              userId="root" password="dev_master"/>

              <!-- 指定生成的类型为java类型，避免数据库中number等类型字段 -->
              <javaTypeResolver>
                     <property name="forceBigDecimals" value="false"/>
              </javaTypeResolver>

              <!-- 生成model模型，对应的包，存放位置可以指定具体的路径,如/ProjectName/src，也可以使用MAVEN来自动生成 -->
              <javaModelGenerator targetPackage="com.etao.bussinesscrm.model.entity" targetProject="MAVEN">
                     <property name="enableSubPackages" value="true"/>
                     <property name="trimStrings" value="true"/>
              </javaModelGenerator>

              <!--对应的xml mapper文件  -->
              <sqlMapGenerator targetPackage="com.etao.bussinesscrm.mapper" targetProject="MAVEN">
                     <property name="enableSubPackages" value="true"/>
              </sqlMapGenerator>

              <!-- 对应的dao接口，默认以Mapper结尾(暂时查询修改后缀名需要经过修改源码) -->
              <javaClientGenerator type="XMLMAPPER" targetPackage="com.etao.bussinesscrm.dao" targetProject="MAVEN">
                     <property name="enableSubPackages" value="true"/>
              </javaClientGenerator>

              <!--生成表结构(可多个信息)-->
              <table tableName="crm_member" domainObjectName="CrmMember" enableCountByExample="false"
                     enableUpdateByExample="false" enableDeleteByExample="false"
                     enableSelectByExample="false" selectByExampleQueryId="false" />

       </context>
</generatorConfiguration>